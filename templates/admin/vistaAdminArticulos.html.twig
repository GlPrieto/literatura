{% extends 'admin/index.html.twig' %}
{% block main %}
  <div class="row m-2">
      <div class="col-12">
          <nav aria-label="breadcrumb">
              <ol class="breadcrumb">
                  <li class="breadcrumb-item">
                      <a href="{{ path ('admin')}}"> Inicio</a>
                  </li>
                  <li class="breadcrumb-item active" aria-current="page">
                      Articulos
                  </li>
              </ol>
          </nav>
      </div>
  </div>
  <h1 class="text-center">Artículos</h1>
  <div class="table-responsive">
      <table class="table table-striped table-sm">
        <thead>
          <tr>
            <th>Titulo</th>
            <th>Sipnosis</th>
            <th>Fecha de publicación</th>
            <th>Categoria</th>
            <th>Idioma</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          {% for articulo in articulos %}
              <tr>
                <td><a href ="{{path ('app_articulo_ver', {'id': articulo.id})}}">{{articulo.titulo}}</a></td>
                <td>{{articulo.sipnosis}}</td>
                <td>{{articulo.fechaPublicacion|date("d-m-Y")}}</td>
                <td>{{articulo.categoria.denominacion}}</td>
                <td>{{articulo.idioma.denominacion}}</td>
                <td> 
                  <a href ="{{path ('app_borrar_articulo_admin',{'id': articulo.id})}}">
                    Eliminar
                  </a>
                </td>
              </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
{% endblock %}
