{% extends 'admin/index.html.twig' %}
{% block main %}
  <nav class="navbar navbar-expand-lg navbar-light bg-light w-100">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
          <a class="nav-link" href="{{ path ('admin')}}"> Inicio</a>
      </li>
      <li class="nav-item">
          <a class="nav-link disabled" href="#categoria">Artículos</a>
      </li>
    </ul>
  </nav>
  <h1 class="text-center">Artículos</h1>
  <div class="row m-2">
    <div class="col-12">
      <div class="table-responsive">
        <table class="table table-hover table-fixed">
          <thead class="cabecera-tabla">
            <tr>
              <th>Título</th>
              <th>Fecha de publicación</th>
              <th>Categoría</th>
              <th>Idioma</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            {% for articulo in articulos %}
                <tr>
                  <td><a class="enlace-oscuro" href ="{{path ('app_articulo_ver', {'id': articulo.id})}}">{{articulo.titulo}}</a></td>
                  <td>{{articulo.fechaPublicacion|date("d-m-Y")}}</td>
                  <td>{{articulo.categoria.denominacion}}</td>
                  <td>{{articulo.idioma.denominacion}}</td>
                  <td> 
                    <a class="enlace-oscuro" href ="{{path ('app_borrar_articulo_admin',{'id': articulo.id})}}">
                      Eliminar
                    </a>
                  </td>
                </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
  </div>

{% endblock %}
