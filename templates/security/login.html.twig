{% extends 'base.html.twig' %}

{% block title %}Iniciar sesión{% endblock %}

{% block main %}
    <div class="formulario-formato">
        <h1 class="mb-4 font-weight-normal text-center">
            <a class="enlace-oscuro" href="#contenidoPrincipal">Iniciar sesión</a>
        </h1>
        <hr>
        <div class="row m-2">
            <form id="contenidoPrincipal" class="form-signin text-center w-100" method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        La sesión está iniciada con el usuario {{ app.user.username }} <a href="{{ path('app_logout') }}"> Desconectar</a>
                    </div>
                
                {% else %}
            
                <div class="row m-2">
                    <div class="col-12">
                        <div class="form-label-group">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <div class="input-group-text">@</div>
                                </div>
                                <input title="Email" type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="Email"
                                    aria-describedby="emailHelp" required autofocus>
                            </div>
                        </div>
                        <div class="invalid-feedback" style="width: 100%;">
                            Es obligatorio introducir el email.
                        </div>
                    </div>
                </div>
                <div class="row m-2">
                    <div class="col-12">
                        <div class="form-label-group">
                            <input title="Contraseña" type="password" name="password" id="inputPassword" class="form-control" placeholder="Contraseña" required>
                        </div>
                    </div>
                </div>

                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                >
                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                #}
                <div class="row m-2">
                    <div class="col-12">
                        <button title="Confirmar" class="btn btn-md btn-dark btn-block" type="submit">
                            Iniciar sesión
                        </button>
                    </div>
                </div>
                {% endif %}
            </form>
        </div>
    </div>
{% endblock %}
