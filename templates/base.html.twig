{# templates/base.html.twig #}
<!DOCTYPE html>
<html lang="es">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Gestor de articulos literarios{% endblock %}</title>
        {% block stylesheets %}<link rel="stylesheet" href="{{ asset('css/style.css') }}">{% endblock %}
    </head>
    <body>
        {% block body %}
<header>

<a class="inicio" href="{{ path('index') }}">Gestor de articulos literarios</a>

    {% if app.user %}
        <a class="enlace" href="{{ path('app_nuevo_articulo')}}">Añadir artículo</a>
        <div class="mb-3">
            Usuario:  {{ app.user.username }} <a href="{{ path('app_logout') }}"> Desconectar</a>
        </div>
    
    {% else %}
    <a class="enlace" href="{{ path('app_login') }}">Iniciar sesión</a>
    {% endif %}

</header>
        <div id="container">
            <div id="main">
            {% block main %}{% endblock %}
            </div>
        </div>
        {% endblock %}
        {% block javascripts %}{% endblock %}
        <footer>Copyright © {{ 'now'|date('Y') }} <span><a href="{{ path('index') }}">Gestor de articulos literarios</a></span>
	<p>Realizado por: Gloria Prieto Ortega<p></footer>
    </body>
</html>
