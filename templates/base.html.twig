{# templates/base.html.twig #}
<!DOCTYPE html>
<html lang="es">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Gestor de artículos literarios{% endblock %}</title>
        <link rel="icon" href="{{ asset('images/favicon.ico') }}" />
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/style.css') }}">
            <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        {% endblock %}
    </head>
    <body>
        {% block body %}
        <header>
            <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 b">
                <a id="inicio" title="Inicio" class="my-0 mr-md-auto font-weight-normal inicio" href="{{ path('index') }}">
                <img class="logo" src="{{ asset('images/logo1.png') }}"/>
                Gestor de articulos literarios</a>
                
                <!--Navbar-->
                <nav class="my-2 my-md-0 mr-md-3">
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        {% if is_granted('ROLE_ADMIN') %}
                            <a class="enlace" href="{{ path('admin') }}">
                                {{ app.user.firmaUsuario }}
                            </a>
                        {% else %}
                            <a class="enlace" href="{{ path('app_perfil_ver', {'id': app.user.id}) }}">
                                {{ app.user.firmaUsuario }}
                            </a>
                        {% endif %}
                        <a class="p-2 enlace" href="{{ path('app_nuevo_articulo')}}">Añadir artículo</a>
                        <a class="p-2 enlace" href="{{ path('app_logout') }}"> Desconectar</a>
                    {% else %}
                        <a class="p-2 enlace" href="{{ path('app_login') }}">Iniciar sesión</a>
                        <a class="p-2 enlace" href="{{ path('app_register') }}">Registrarse</a>
                    {% endif %}
                </nav>
                <!--/.Navbar-->
            </div>
        </header>
        <div id="container">
            <main>
            {% block main %}{% endblock %}
            </main>
        </div>
        {% endblock %}
        {% block javascripts %}
            <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
            <script src="{{ asset('js/funciones.js') }}"></script>
            <!--
            <script src="{{ asset('vendors/bootstrap-4.4.0-dist/js/jquery-3.4.1.min.js') }}"></script>
            <script src="{{ asset('vendors/bootstrap-4.4.0-dist/js/popper.js') }}"></script>
            <script src="{{ asset('vendors/bootstrap-4.4.0-dist/js/bootstrap.min.js') }}"></script>
            -->
        {% endblock %}
        <footer id="footer" class="page-footer text-center text-white">
            <p>Copyright © 2020 | <span><a class="my-0 mr-md-auto font-weight-normal enlace" href="{{ path('index') }}">Gestor de artículos literarios</a></span>
    	    <p>Realizado por: Gloria Prieto Ortega | <a class="enlace" href="#inicio">Arriba</a><p>
        </footer>
    </body>
</html>
